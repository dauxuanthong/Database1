
@model IEnumerable<Database_1.Models.Cart>
@{
	ViewBag.Title = "Mine";
}

<h2>Mine</h2>

@Html.ActionLink("Create a new Cart", "Create")

<table class="table table-striped">
	<tr>
		<th>Cart Id</th>
		<th>Product Name</th>
		<th>Delete</th>
	<!--<th>Edit</th>-->
	</tr>
	@foreach (var item in Model)
	{
<tr>
	<th>@item.Id</th>
	<th>@item.Product.Name</th>
	<td>@Html.ActionLink("Delete this product", "Delete", new { id = item.Id })</td>
<!--<td>@Html.ActionLink("Edit this product", "Edit", new { id = item.Id })</td>-->
</tr>
	}
</table>