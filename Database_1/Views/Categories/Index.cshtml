@model IEnumerable<Database_1.Models.Category>
@{
	ViewBag.Title = "Index";
}
<h2>Index Category</h2>
@Html.ActionLink("Create a new Category", "Create")
<table class="table table-striped">
	<tr>
		<th>Id</th>
		<th>Product Name</th>
		<th>Delete</th>
		<th>Edit</th>
	</tr>
	@foreach (var category in Model)
	{
		<tr>
			<td>@category.Id</td>
			<td>@category.Name</td>
			<td>@Html.ActionLink("Delete this category", "Delete", new { id = category.Id })</td>
			<td>@Html.ActionLink("Edit this category", "Edit", new { id = category.Id })</td>
		</tr>
	}
</table>